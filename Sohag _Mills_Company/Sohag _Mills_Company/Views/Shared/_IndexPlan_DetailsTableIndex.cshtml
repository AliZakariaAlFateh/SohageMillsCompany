@model IEnumerable<FuturePlan>

<table class="table table-striped table-bordered table-hover container-lg" style="direction: rtl;">
    <thead class="thead-dark">
        <tr>
            <th>الخطة</th>
            <th>السنة</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Plan in Model)
        {
            <tr >
                <td>@Plan.Plan_Name</td>
                <td>@Plan.Plane_Year</td>
            </tr>
            <tr>
                <td colspan="2">
                    <ul class="list-group">
                        @foreach (var DetailsPlan in Plan.PlanDetails)
                        {
                            <li class="list-group-item text-wrap-0 text-break">@DetailsPlan.Plan_Text</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>






