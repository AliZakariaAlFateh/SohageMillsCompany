@model Region_Sector_Details
@{
    // ViewData["Title"] = "CreateTeam";
    Layout = "~/Views/Shared/_Dashbord_Layout.cshtml";
}
<div class="model modal-dialog modal-xl position-static d-block bg-body-secondary p-4 " tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow" style="direction:rtl;">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1>@ViewBag.title</h1>
                <a class="btn-close" title="الرجوع " asp-action="IndexAdminTeam" asp-controller="CompanyTeam"></a>
            </div>
            <div class="modal-body p-5 pt-0">
                <form asp-action="CreateArea" method="post">

                    <div>
                        <input type="hidden" asp-for="@Model.SectorId" value="@ViewBag.sectorid" class="form-control" />
                    </div>
                    @if (Model != null)
                    {
                        <div>
                            <input type="hidden" asp-for="@Model.Id" class="form-control" />
                        </div>

                    }

                    <div class="form-outline">
                        <label asp-for="@Model.Area_Name" class="control-label">المنطقة</label>
                        <input asp-for="@Model.Area_Name" class="form-control" />
                        <span asp-validation-for="@Model.Area_Name" class="text-danger"></span>
                    </div>

                    <div class="form-outline">
                        <label asp-for="@Model.Address_Name" class="control-label">عنوان المنطقة</label>
                        <input asp-for="@Model.Address_Name" class="form-control" placeholder="أدخل عنوان المنطقة" />
                        <span asp-validation-for="@Model.Address_Name" class="text-danger"></span>

                    </div>


             

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                        <button type="submit" class="btn btn-primary">حفظ</button>
                    </div>

                </form>

            
            </div>
        </div>
    </div>
</div>
