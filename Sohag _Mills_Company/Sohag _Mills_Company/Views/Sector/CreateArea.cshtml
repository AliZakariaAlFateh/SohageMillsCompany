@section Scripts {
    <script src="~/js/jquery-3.5.1.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {

            $(".add_phone_number").on("click", function () {
                var phoneNumberDiv = '<div class="phone-number form-group"><input type="text"  class="form-control" name="Phonessectors" placeholder="رقم النليفون" /><button type="button" class="remove-phone-number btn btn-danger">إحذف</button></div>';
                $("#phoneNumbersContainer").append(phoneNumberDiv);
            });

            $("#phoneNumbersContainer").on("click", ".remove-phone-number", function () {
                $(this).parent().remove();
            });
        })
        
    </script>
}