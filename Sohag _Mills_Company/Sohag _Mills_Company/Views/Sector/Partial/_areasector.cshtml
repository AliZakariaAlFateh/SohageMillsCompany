<!-- Your main page content -->
@model Sectors_RegionVM
@{
    Layout = "_Dashbord_Layout";
    ViewData["Title"] = "Dashboard Admin";
}
<div class="modal" tabindex="-1" role="dialog" id="areasectorpopup">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Your Form Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Your form goes here -->
                <form asp-action="CreateArea" method="post">

                    <div>
                        <input type="hidden" asp-for="sector_Id" class="form-control" />
                    </div>
                    @if (Model == null)
                    {
                        <div>
                            <input type="hidden" asp-for="@Model.Region.Id" class="form-control" />
                        </div>

                    }

                    <div class="form-outline">
                        <label asp-for="@Model.Region.Area_Name" class="control-label">المنطقة</label>
                        <input asp-for="@Model.Region.Area_Name" class="form-control" />
                        <span asp-validation-for="@Model.Region.Area_Name" class="text-danger"></span>
                    </div>

                    <div class="form-outline">
                        <label asp-for="@Model.Region.Address_Name" class="control-label">عنوان المنطقة</label>
                        <input asp-for="@Model.Region.Address_Name" class="form-control" placeholder="أدخل عنوان المنطقة" />
                        <span asp-validation-for="@Model.Region.Address_Name" class="text-danger"></span>

                    </div>


                    <div class="row col-md-6">
                        <div class="form-outline">
                            <div class="row" id="phoneNumbersContainer">
                                @* @for (var i = 0; i < Model.Phonessectors.Count; i++) *@
                                @foreach (var phone in Model.Phonessectors)
                                {
                                    <div class="col phone-number">
                                        @* <label asp-for="phone" class="control-label">رقم التليفون</label> *@
                                        <input name="phone"  class="form-control" placeholder="رقم التليفون" />
                                    </div>
                                }
                            </div>
                            <div class="col">
                                <button type="button" class="add_phone_number btn btn-primary mt-2">أضافة رقم  اخر</button>
                            </div>
                        </div>
                    </div>



                </form>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-primary" >حفظ</button>
                </div>
            </div>
        </div>
    </div>
</div>

