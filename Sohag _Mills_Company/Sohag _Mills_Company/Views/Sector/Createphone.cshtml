@model PhonesSectors
@{
    // ViewData["Title"] = "CreateTeam";
    Layout = "~/Views/Shared/_Dashbord_Layout.cshtml";
}
<div class="model modal-dialog modal-xl position-static d-block bg-body-secondary p-4 " tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow" style="direction:rtl;">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1>@ViewBag.title</h1>
                <a class="btn-close" title="الرجوع  " asp-action="IndexPhones" asp-controller="Sector"></a>
            </div>
            <div class="modal-body p-5 pt-0">
                <form asp-action="CreatePhone" method="post">

                    <div>
                        <input type="hidden" asp-for="@Model.Phones_Address_DetailsId " value="@ViewBag.region_id " class="form-control" />
                    </div>
                    @if (Model != null)
                    {
                        <div>
                            <input type="hidden" asp-for="@Model.Id" class="form-control" />
                        </div>

                    }

                    <div class="form-outline">
                        <label asp-for="@Model.PhoneNumber" class="control-label">التليفون</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                        <button type="submit" class="btn btn-primary">حفظ</button>
                    </div>

                </form>

            
            </div>
        </div>
    </div>
</div>
