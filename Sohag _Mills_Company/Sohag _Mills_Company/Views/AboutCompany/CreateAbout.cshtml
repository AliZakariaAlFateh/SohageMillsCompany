@model About_Company

@{
   // ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Shared/_Dashbord_Layout.cshtml";
}
<div class="model modal-dialog modal-xl position-static d-block bg-body-secondary p-4 " tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow" style="direction:rtl;">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <div>@ViewBag.title</div>
                <a class="btn-close" asp-action="IndexAdminAbout" asp-controller="AboutCompany"></a>
            </div>
            <div class="modal-body p-5 pt-0">


                <form asp-action="CreateAbout" >
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <input type="hidden" name="Id" value="@Model.Id" class="form-control" />
                    }
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="title" class="control-label"> </label>
                                <input asp-for="title" class="form-control" />
                                <span asp-validation-for="title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                  
                    <div class="form-group">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                        <a class="btn btn-outline-secondary" asp-action="IndexAdminAbout" asp-controller="AboutCompany"> إلغاء </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
