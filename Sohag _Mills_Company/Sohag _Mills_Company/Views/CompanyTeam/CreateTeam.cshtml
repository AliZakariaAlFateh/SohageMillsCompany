@model CampanyTeam

@{
   // ViewData["Title"] = "CreateTeam";
    Layout = "~/Views/Shared/_Dashbord_Layout.cshtml";
}
<div class="model modal-dialog modal-xl position-static d-block bg-body-secondary p-4 " tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow" style="direction:rtl;">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1>@ViewBag.title</h1>
                <a class="btn-close" title="الرجوع  " asp-action="IndexAdminTeam" asp-controller="CompanyTeam"></a>
            </div>
            <div class="modal-body p-5 pt-0">
                <form asp-action="CreateTeam" enctype="multipart/form-data"  >
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <input type="hidden" name="Id" value="@Model.Id" class="form-control" />
                    }
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="nickname" class="control-label"></label>
                                <input asp-for="nickname" class="form-control" />
                                <span asp-validation-for="nickname" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Postion" class="control-label"></label>
                                <input type="text" id="Postion" asp-for="Postion" hidden />
                                <select asp-for="postionId" class="form-control mt-2 w-100">
                                    <option value="0">أختار منصب</option>
                                    <option value="1">ﺭﺋﻴﺲ ﻣﺠﻠﺲ ﺍﻹﺩﺍﺭﺓ</option>
                                    <option value="2">ﺍﻟﺮﺋﻴﺲ ﺍﻟﺘﻨﻔﻴﺬﻯ</option>
                                    <option value="3">ﺍﻟﻌﻀﻮ ﺍﻟﻤﻨﺘﺪﺏ ﻟﻠﺸﺌﻮﻥ ﺍﻟﻔﻨﻴﺔ</option>
                                    <option value="4">ﻋﻀــﻮ ﻣﺠﻠﺲ ﺍﻹﺩﺍﺭﺓ</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Nationaity" class="control-label"></label>
                                <input asp-for="Nationaity" class="form-control" />
                                <span asp-validation-for="Nationaity" class="text-danger"></span>
                           
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Representation_Body" class="control-label"></label>
                                <input asp-for="Representation_Body" class="form-control" />
                                <span asp-validation-for="Representation_Body" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="control-label"> أضافة صورة عضو</label>
                                <input type="file" asp-for="ImageIFormFile" class="form-control" />
                                <input type="hidden" asp-for="ImageName" class="form-control" />
                                <span asp-validation-for="ImageIFormFile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="direction: ltr;">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                        <a class="btn btn-outline-secondary" asp-action="IndexAdminTeam"  asp-controller="CompanyTeam"> الرجوع  </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
