@model IEnumerable<CampanyTeam>



<table class="table table table-hover table-striped">
    <thead class="table-primary">
        <tr>
@*            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                صورة العضو
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Postion)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nationaity)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Representation_Body)
            </th>
            @*   <th scope="col">
            @Html.DisplayNameFor(model => model.ImgPath)
            </th>*@


            <th scope="col">تفاصيل</th>
            <th scope="col">تعديل</th>
            <th scope="col">حذف</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              @*  <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img class="img-fluid " src="/Images/@item.ImageName" width="70px" height="70px" alt="">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationaity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Representation_Body)
                </td>
                @*      <td>
            @*asp-append-version="true"
            @*<img src="~/ProductImages/@item.ImgPath" class="rounded-circle" height="40" width="40" />
            </td>*@
                @*asp-action="Details" asp-route-id="@item.Id"*@
                <td>
                    <a class="btn btn-outline-warning Details"  data-id="@item.Id">
                        <i class="bi bi-pen"></i>
                        Details
                    </a>
                </td>

                <td>

                    <a class="btn btn-outline-primary" asp-action="CreateTeam" asp-route-id="@item.Id">
                        <i class="bi bi-pen"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-outline-danger Deletemember"  data-id="@item.Id">
                        <i class="bi bi-trash3-fill"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


