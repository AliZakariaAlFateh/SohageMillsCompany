@model Statement
@{
    Layout = "_Dashbord_Layout";
    ViewData["Title"] = "اضافة بيان";
}
<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" style="direction:rtl" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">اضافة بيان</h1>
                <a class="btn-close m-0" asp-action="Index"></a>
            </div>

            <div class="modal-body p-5 pt-0">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Statement_Name" class="control-label h5 "></label>
                    <div class="form-floating mb-3">
                        <input asp-for="Statement_Name" class="form-control rounded-4 mt-3" />
                        <span asp-validation-for="Statement_Name" class="text-danger"></span>
                    </div>

                    <br />
                    <label asp-for="IndicatorId" class="control-label"></label>
                    <div class="input-group mb-3">
                        <select asp-for="IndicatorId" class="form-control" asp-items="ViewBag.IndicatorId"></select>
                        <span asp-validation-for="IndicatorId" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <input type="submit" value="اضافة" class="btn btn-primary rounded-3 mb-2" />
                        <a class="btn btn-outline-secondary rounded-3" asp-action="Index">الغاء</a>
                    </div><br />

                    @* <small class="text-body-secondary">Using the Create page, you can add an unlimited number of Brands.</small> *@

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

