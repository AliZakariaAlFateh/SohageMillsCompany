@model Shareholder_Structure
<h1>اضافة مساهم</h1>
@{
    ViewData["Title"] = "اضافة مساهم";
    Layout = "~/Views/Shared/_Dashbord_Layout.cshtml";
}
<div class="model modal-dialog modal-xl position-static d-block bg-body-secondary p-4 " tabindex="-1" role="dialog" id="modalSignin" style="direction:rtl">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
               @*  <h1 class="fw-bold mb-0 fs-2">Create CreateTeam</h1> *@
                <a class="btn-close" asp-action="IndexSharHolders" asp-controller="Shareholder"></a>
            </div>
            <div class="modal-body p-5 pt-0">


                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <input type="hidden" name="Id" value="@Model.Id" class="form-control" />
                    }
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Statement" class="control-label"></label>
                                <input asp-for="Statement" class="form-control" />
                                <span asp-validation-for="Statement" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Number_Shares" class="control-label"></label>
                                <input asp-for="Number_Shares" class="form-control" />
                                <span asp-validation-for="Number_Shares" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Value_Bound" class="control-label"></label>
                                <input asp-for="Value_Bound" class="form-control" />
                                <span asp-validation-for="Value_Bound" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label asp-for="Percentage" class="control-label"></label>
                                <input asp-for="Percentage" class="form-control" />
                                <span asp-validation-for="Percentage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                        <a class="btn btn-outline-secondary" asp-action="IndexSharHolders" asp-controller="Shareholder"> اغلاق </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
